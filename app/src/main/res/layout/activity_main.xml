<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bt_fragment1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Con1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/bt_fragment2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/bt_fragment2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Con2"
        app:layout_constraintLeft_toRightOf="@id/bt_fragment1"
        app:layout_constraintRight_toLeftOf="@+id/bt_fragment3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/bt_fragment3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Con3"
        app:layout_constraintLeft_toRightOf="@id/bt_fragment2"
        app:layout_constraintRight_toLeftOf="@+id/bt_fragment_chain"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/bt_fragment_chain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chain"
        app:layout_constraintLeft_toRightOf="@id/bt_fragment_chain"
        app:layout_constraintRight_toLeftOf="@+id/bt_fragment_movie"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/bt_fragment_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Movie"
        app:layout_constraintLeft_toRightOf="@id/bt_fragment_chain"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <FrameLayout
        android:id="@+id/home_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


